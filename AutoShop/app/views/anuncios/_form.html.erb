<%= simple_form_for(@anuncio, :html => { :class => 'form-horizontal' }) do |f| %>

	<div class="form-inputs">
		<%= f.input :modelo %>
		<%= f.input :descricao %>
		<%= f.input :ano %>
		<%= f.input :valor %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary btn-large' %>
	</div>
<% end %>
