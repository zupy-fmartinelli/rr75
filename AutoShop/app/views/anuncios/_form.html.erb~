<%= simple_form_for(@anuncio, :html => { :class => 'form-horizontal' }) do |f| %>
<%= f.error_notification %>

	<div class="form-inputs">
		<%= f.input :modelo %>
		<%= f.simple_fields_for :marca do |m| %>
			<%= m.input :nome, label: "Marca" %>
		<% end %>
		
		<%= select :anuncio, :marca_id, @marcas.map{ |m| [m.nome, m.id]},
									prompt: "ou selecione a marca:" %>

		<%= f.input :descricao %>
		<%= f.input :ano %>
		<%= f.input :valor %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :class => 'btn-primary btn-large' %>
	</div>
<% end %>
